%menu
  %p=link_to 'back to project', project_errors_url(@project)

%h1 Summary

%p#resolved
  resolved ?
  = @error.resolved

%dl
  %dt Error
  %dd= @error.message
  %dt URL
  %dd= @error.url
  %dt Parameters
  %dd
    %pre= @error.params.inspect

- unless @error.same_errors.empty?
  %h2
    Similar Errors
    ( #{@error.same_errors.count} )

  %ul
    - @error.same_errors.each do |same_error|
      %li= l same_error.raised_at, :format => :long_ordinal

- form_for @error do |f|
  = hidden_field_tag 'error[resolved]', !@error.resolved
  = f.submit @error.resolved ? 'Unresolved' : 'Resolved'

%h2 Comments

- if @error.comments.size < 1
  %p There are no comments on this error
- else
  %ul
    - @error.comments.each do |comment|
      %li
        %h4
          By
          = comment.user_email
          in
          = l(comment.created_at)
        %div
          = simple_format(comment.text)

- form_tag comment_project_error_url(@project, @error) do
  %p
    = text_area_tag :text
  %p
    = submit_tag 'Add comment'
